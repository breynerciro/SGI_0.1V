{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "../dist",
        "rootDir": "..",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "baseUrl": "..",
        "paths": {
            "@shared/*": [
                "shared/*"
            ]
        }
    },
    "include": [
        "../electron/**/*.ts",
        "../backend/**/*.ts",
        "../shared/**/*.ts"
    ],
    "exclude": [
        "../node_modules",
        "../dist",
        "**/*.test.ts"
    ]
}