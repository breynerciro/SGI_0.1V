{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "../dist",
        "rootDir": "..",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@domain/*": [
                "domain/*"
            ],
            "@infrastructure/*": [
                "infrastructure/*"
            ],
            "@api/*": [
                "api/*"
            ],
            "@shared/*": [
                "../shared/*"
            ],
            "@prisma/*": [
                "../prisma/generated-client/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "../prisma/generated-client/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}